{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "pact-mock-js.core": ["index.ts"]
    },
    /* List of root folders whose combined content represents the structure of the project at runtime. */
    "types": ["node", "jest"]
  },
  "include": ["src"]
}